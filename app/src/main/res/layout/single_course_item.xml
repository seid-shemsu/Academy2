<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="7dp"
        android:layout_margin="15dp"
        android:id="@+id/card">
        <ImageView
            android:id="@+id/course_img"
            android:layout_width="130dp"
            android:scaleType="fitCenter"
            android:layout_height="130dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/course_name"
        android:layout_toEndOf="@id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textSize="20sp"
        android:gravity="start"
        android:layout_marginTop="25dp"
        android:textColor="@color/bunny"/>

    <RatingBar
        android:id="@+id/course_rate"
        android:layout_alignStart="@id/course_name"
        android:layout_below="@id/course_name"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        android:numStars="5" />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_rate"
        android:layout_alignStart="@id/course_rate"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/attendants"
            android:layout_marginEnd="10dp"
            android:textColor="@color/bunny"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attendants"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>
</RelativeLayout>